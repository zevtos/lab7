<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.itmo.client.controller.RootLayoutController"
            stylesheets="@../css/LightStyle.css">
    <top>
        <MenuBar styleClass="menu-bar">
            <Menu text="%menu.file" styleClass="menu">
                <MenuItem text="%menu.file.exit" onAction="#handleExit" styleClass="menu-item"/>
            </Menu>
            <Menu text="%menu.help" styleClass="menu">
                <MenuItem text="%menu.help.about" onAction="#handleAbout" styleClass="menu-item"/>
            </Menu>
            <Menu text="%menu.language" styleClass="menu">
                <MenuItem text="%language.english" fx:id="menuItemEnglish" styleClass="menu-item"/>
                <MenuItem text="%language.russian" fx:id="menuItemRussian" styleClass="menu-item"/>
                <MenuItem text="%language.swedish" fx:id="menuItemSwedish" styleClass="menu-item"/>
                <MenuItem text="%language.spanish" fx:id="menuItemSpanish" styleClass="menu-item"/>
                <MenuItem text="%language.finnish" fx:id="menuItemFinnish" styleClass="menu-item"/>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
